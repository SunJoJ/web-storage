<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <!-- index servlet -->
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>app.servlets.MainServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>


    <!-- login servlet -->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>app.servlets.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- logged servlet -->
    <servlet>
        <servlet-name>logged</servlet-name>
        <servlet-class>app.servlets.LoggedServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>logged</servlet-name>
        <url-pattern>/loggedView</url-pattern>
    </servlet-mapping>


    <!-- myOrders servlet -->
    <servlet>
        <servlet-name>myOrders</servlet-name>
        <servlet-class>app.servlets.MyOrdersServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>myOrders</servlet-name>
        <url-pattern>/myOrders</url-pattern>
    </servlet-mapping>


    <!-- status servlet -->
    <servlet>
        <servlet-name>status</servlet-name>
        <servlet-class>app.servlets.StatusServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>status</servlet-name>
        <url-pattern>/status</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>panel</servlet-name>
        <servlet-class>app.servlets.PanelServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>panel</servlet-name>
        <url-pattern>/panel</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>manageOrders</servlet-name>
        <servlet-class>app.servlets.OrdersServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>manageOrders</servlet-name>
        <url-pattern>/manageOrders</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>processOrder</servlet-name>
        <servlet-class>app.servlets.ProcessOrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>processOrder</servlet-name>
        <url-pattern>/processOrder</url-pattern>
    </servlet-mapping>



</web-app>